{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LodeRunner API",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/LodeRunner.API.sln",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build LodeRunner",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/LodeRunner.sln",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build LodeRunner Test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/LodeRunner.Test.sln",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "SubTask-Run Checkov image",
            "type": "shell",
            "command": "docker run -it --name checkov-lr -v /workspaces/loderunner:/loderunner --rm bridgecrew/checkov -d /loderunner --output-file-path /loderunner --framework 'kubernetes' 'dockerfile' ; returncode=$?; mv results_cli.txt checkov_scan_results.txt; code -r ${workspaceFolder}/checkov_scan_results.txt;echo Scan Complete - Please review 'checkov_scan_results.txt' for details.; exit $returncode"
        },
        {
            "label": "SubTask-summary Checkov Scan Completion Summary",
            "command": "time(echo '-------------------------- Checkov Results Summary --------------------------';for i in {1..15};do test -f checkov_scan_results.txt && break || sleep 1;done;for i in {1..3};do sed -n '/results:/{p;n;n;p;n;n;}' checkov_scan_results.txt && break || sleep 1;done;echo '-------------------------- Checkov Results Summary --------------------------';)",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
              }
        },
        {
            "label": "Run Checkov Scan",
            "dependsOrder": "sequence",
            "dependsOn": ["SubTask-Run Checkov image", "SubTask-summary Checkov Scan Completion Summary"],
            "problemMatcher": []
        }
    ]
}
