{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LodeRunner API",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/LodeRunner.API.sln",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build LodeRunner",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/LodeRunner.sln",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build LodeRunner Test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/LodeRunner.Test.sln",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "SubTask-Run Checkov image",
            "type": "docker-run",
            "dockerRun": {
              "customOptions": "--tty",
              "image": "bridgecrew/checkov",
              "command": "-d /loderunner --output-file-path /loderunner --framework 'kubernetes' 'dockerfile'",
              "volumes": [{
                "localPath": "${workspaceFolder}",
                "containerPath": "/loderunner"
              }],
              "remove": true
            }
        },
        {
            "label": "SubTask-Waiting for Checkov scan results file",
            "type": "shell",
            "command": "time (echo Waiting 5 seconds for Checkov Scan Results file to get created...; sleep 5);for i in {1..3}; do mv results_cli.txt checkov_scan_results.txt && break || sleep 1; done;for i in {1..3}; do test -f checkov_scan_results.txt && break || sleep 1; done;code -r ${workspaceFolder}/checkov_scan_results.txt"
        },
        {
            "label": "SubTask-echo Checkov Scan Complete",
            "command": "echo Scan Complete - Please review 'checkov_scan_results.txt' for details.",
            "type": "shell"
        },
        {
            "label": "Run Checkov Scan",
            "dependsOrder": "sequence",
            "dependsOn": ["SubTask-Run Checkov image", "SubTask-Waiting for Checkov scan results file", "SubTask-echo Checkov Scan Complete"],
            "problemMatcher": []
        }
    ]
}
